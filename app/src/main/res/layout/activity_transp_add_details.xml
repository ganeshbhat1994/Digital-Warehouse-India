<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/common_signin_btn_light_text_pressed"

    tools:context="com.example.w.maps.DetailsWarehouse"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Types of Transport"
            android:layout_marginBottom="3dp"
            android:textColor="#2f6699"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Capacity"
            android:id="@+id/checkBox1"
            android:checked="false"
            android:layout_marginBottom="3dp"
            android:textColor="#2f6699"/>
        <EditText
            android:id="@+id/smallnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:textColor="#000000"
            android:layout_marginBottom="1dp"
            android:inputType="number"
            android:hint="Enter Quantity"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/smallcost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:textColor="#000000"
            android:hint="Enter cost..."
            android:layout_marginBottom="1dp"
            android:inputType="number"
            android:visibility="gone"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Capacity"
            android:id="@+id/checkBox2"
            android:checked="false"
            android:layout_marginBottom="1dp"
            android:textColor="#2f6699" />
        <EditText
            android:id="@+id/mednumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:textColor="#000000"
            android:layout_marginBottom="1dp"
            android:inputType="number"
            android:hint="Enter Quantity"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/medcost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:textColor="#000000"
            android:hint="Enter cost..."
            android:layout_marginBottom="1dp"
            android:inputType="number"
            android:visibility="gone"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Capacity"
            android:id="@+id/checkBox3"
            android:checked="false"
            android:layout_marginBottom="1dp"
            android:textColor="#2f6699"/>
        <EditText
            android:id="@+id/largenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:textColor="#000000"
            android:layout_marginBottom="1dp"
            android:inputType="number"
            android:hint="Enter Quantity"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/largecost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:textColor="#000000"
            android:hint="Enter cost..."
            android:layout_marginBottom="1dp"
            android:inputType="number"
            android:visibility="gone"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extra Large Capacity"
            android:id="@+id/checkBox4"
            android:checked="false"
            android:layout_marginBottom="1dp"
            android:textColor="#2f6699"/>
        <EditText
            android:id="@+id/xlargenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:textColor="#000000"
            android:layout_marginBottom="1dp"
            android:inputType="number"
            android:hint="Enter Quantity"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/xlargecost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:textColor="#000000"
            android:hint="Enter cost..."
            android:layout_marginBottom="15dp"
            android:inputType="number"
            android:visibility="gone"/>


        <Button
            android:id="@+id/trans_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_edittext"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>

</ScrollView>
