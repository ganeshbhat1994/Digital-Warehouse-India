<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#ffffff"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.w.maps.StorageFacility">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=" Choose the Product to be stored"
            android:textSize="20dp"
            android:layout_marginBottom="4dp"
            android:textColor="#2f6699"/>
        <EditText
            android:id="@+id/txtProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#2f6699"
            android:background="@drawable/bg_edittext"
            android:hint="Search product here "/>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:popupBackground="#2f6699"
            android:background="@drawable/spinner_border"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#000000"
            android:foreground="#000000"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Choose the Storage Type"
            android:textSize="20dp"
            android:layout_marginBottom="7dp"
            android:textColor="#2f6699"/>
        <RadioGroup
            android:id="@+id/radiogroupcold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radiocold"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Cold"
                android:buttonTint="#2f6699"
                android:layout_marginBottom="7dp"
                android:textColor="#2f6699"/>
            <RadioButton
                android:id="@+id/radionormal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:buttonTint="#2f6699"
                android:layout_marginBottom="7dp"
                android:textColor="#2f6699"/>
        </RadioGroup>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Quantity to be Stored (tons)"
            android:textStyle="bold"
            android:textSize="20dp"

            android:textColor="#2f6699"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/productquantity"
            android:layout_marginBottom="7dp"
            android:inputType="number"
            android:textColor="#000000"
            android:background="@drawable/bg_edittext"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Storage required for (days)"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#2f6699"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/productdays"
            android:layout_marginBottom="7dp"
            android:inputType="number"
            android:textColor="#000000"
            android:background="@drawable/bg_edittext"/>
        <Button
            android:id="@+id/okbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_edittext"
            android:textSize="15dp"
            android:text="Done"/>

    </LinearLayout>
</ScrollView>
